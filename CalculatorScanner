import java.util.Scanner;

public class CalculatorScanner {
    public static void main(String[] args) {

        System.out.println("Gebe hier nun eine Zahl ein: ");
        Scanner sc = new Scanner(System.in);
        int number1 = sc.nextDouble();
        System.out.println("Geben hier noch eine Zahl ein: ");
        int number2 = sc.nextDouble();
        System.out.println("Das Ergebnis ist: "+number1/number2);
    }
}
